{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "es5"
    }
  },
  "files": {
    "ignore": [
      ".git",
      ".mypy_cache",
      ".ruff_cache",
      ".venv",
      ".wrangler",
      "__pycache__",
      "build",
      "dist",
      "node_modules"
    ]
  }
}
